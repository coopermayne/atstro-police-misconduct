---
/**
 * ArticleGrid Component
 * Displays a grid of articles (posts or cases) with consistent styling
 * Used on homepage and post/case listing pages
 */

interface Props {
  items: any[]; // Accepts Astro collection items
  type: 'post' | 'case';
}

const { items, type } = Astro.props;

// Helper to get featured image URL
function getFeaturedImageUrl(featuredImage: {imageId: string, alt: string, caption?: string} | undefined): string | undefined {
  if (!featuredImage?.imageId) return undefined;
  const accountHash = "3oZsG34qPq3SIXQhl47vqA";
  return `https://imagedelivery.net/${accountHash}/${featuredImage.imageId}/medium`;
}

// Helper to format date
function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Get the appropriate URL prefix
const urlPrefix = type === 'post' ? '/posts' : '/cases';
---

<!-- Grid container with responsive columns -->
<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  {items.map(item => (
    <!-- Individual article/case card -->
    <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-200 dark:border-gray-700">
      
      <!-- Featured image or placeholder (clickable) -->
      <a href={`${urlPrefix}/${item.slug}`}>
        {item.data.featured_image ? (
          <img 
            src={getFeaturedImageUrl(item.data.featured_image)} 
            alt={item.data.title}
            class="w-full h-48 object-cover rounded-t-lg"
          />
        ) : (
          <div class="w-full h-48 bg-gray-200 dark:bg-gray-700 rounded-t-lg flex items-center justify-center">
            <span class="text-gray-400 dark:text-gray-500">No image</span>
          </div>
        )}
      </a>
      
      <!-- Card content -->
      <div class="p-6">
        
        <!-- Title (clickable) -->
        <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-2">
          <a href={`${urlPrefix}/${item.slug}`} class="hover:text-red-600 dark:hover:text-red-500">
            {item.data.title}
          </a>
        </h2>
        
        <!-- Metadata tags -->
        {type === 'case' ? (
          <>
            <!-- Basic info without boxes -->
            <div class="flex flex-wrap gap-x-4 gap-y-1 text-xs text-gray-500 dark:text-gray-400 mb-3">
              <div class="flex items-center gap-1.5">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{formatDate(item.data.incident_date!)}</span>
              </div>
              <div class="flex items-center gap-1.5">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>{item.data.city}, CA</span>
              </div>
              {item.data.age && (
                <div class="flex items-center gap-1.5">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span>Age {item.data.age}</span>
                </div>
              )}
            </div>

            <!-- Badges with boxes -->
            <div class="flex flex-wrap gap-2 text-xs mb-4">
              <!-- Agencies -->
              {item.data.agencies?.slice(0, 1).map((agency: string) => (
                <span class="inline-flex items-center gap-1.5 px-2 py-1 bg-gray-100 dark:bg-gray-700/50 text-gray-700 dark:text-gray-300 rounded border border-gray-300 dark:border-gray-600">
                  <svg class="w-3 h-3 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  {agency}
                </span>
              ))}

              <!-- Force Type -->
              {item.data.force_type?.slice(0, 1).map((force: string) => (
                <span class="inline-flex items-center gap-1.5 px-2 py-1 bg-orange-50 dark:bg-orange-900/20 text-orange-800 dark:text-orange-300 rounded border border-orange-200 dark:border-orange-800/50">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                  {force}
                </span>
              ))}

              <!-- Body Cam -->
              {item.data.bodycam_available && (
                <div class="inline-flex items-center gap-1.5 px-2 py-1 bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-400 rounded border border-green-200 dark:border-green-800/50">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M23 7l-7 5 7 5V7z"/>
                    <rect x="1" y="5" width="15" height="14" rx="2" ry="2"/>
                  </svg>
                  <span>Body Cam</span>
                </div>
              )}
            </div>
          </>
        ) : (
          <>
            <!-- Date without box -->
            <div class="flex items-center gap-1.5 text-xs text-gray-500 dark:text-gray-400 mb-3">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>{formatDate(item.data.published_date!)}</span>
            </div>

            <!-- Tags with boxes -->
            <div class="flex flex-wrap gap-2 text-xs mb-4">
              {item.data.tags?.slice(0, 2).map((tag: string) => (
                <span class="inline-flex items-center gap-1.5 px-2 py-1 bg-gray-100 dark:bg-gray-700/50 text-gray-700 dark:text-gray-300 rounded border border-gray-300 dark:border-gray-600">
                  <svg class="w-3 h-3 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  {tag}
                </span>
              ))}
            </div>
          </>
        )}
        
        <!-- Read more link (subtle affordance) -->
        <a 
          href={`${urlPrefix}/${item.slug}`}
          class="inline-block text-red-600 dark:text-red-500 hover:underline text-sm mt-3"
        >
          Read more â†’
        </a>
        
      </div>
    </article>
  ))}
</div>
