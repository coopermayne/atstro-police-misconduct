---
/**
 * ArticleGrid Component
 * Displays a grid of articles (posts or cases) with consistent styling
 * Used on homepage and post/case listing pages
 */

import MetadataItem from './MetadataItem.astro';

interface Props {
  items: any[]; // Accepts Astro collection items
  type: 'post' | 'case';
}

const { items, type } = Astro.props;

// Helper to get featured image URL
function getFeaturedImageUrl(featuredImage: {imageId: string, alt: string, caption?: string} | undefined): string | undefined {
  if (!featuredImage?.imageId) return undefined;
  const accountHash = "3oZsG34qPq3SIXQhl47vqA";
  return `https://imagedelivery.net/${accountHash}/${featuredImage.imageId}/medium`;
}

// Helper to format date
function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Get the appropriate URL prefix
const urlPrefix = type === 'post' ? '/posts' : '/cases';
---

<!-- Grid container with responsive columns -->
<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  {items.map(item => (
    <!-- Individual article/case card -->
    <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-200 dark:border-gray-700">
      
      <!-- Featured image or placeholder (clickable) -->
      <a href={`${urlPrefix}/${item.slug}`}>
        {item.data.featured_image ? (
          <img 
            src={getFeaturedImageUrl(item.data.featured_image)} 
            alt={item.data.title}
            class="w-full h-48 object-cover rounded-t-lg"
          />
        ) : (
          <div class="w-full h-48 bg-gray-200 dark:bg-gray-700 rounded-t-lg flex items-center justify-center">
            <span class="text-gray-400 dark:text-gray-500">No image</span>
          </div>
        )}
      </a>
      
      <!-- Card content -->
      <div class="p-6">
        
        <!-- Title (clickable) -->
        <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-2">
          <a href={`${urlPrefix}/${item.slug}`} class="hover:text-red-600 dark:hover:text-red-500">
            {item.data.title}
          </a>
        </h2>
        
        <!-- Metadata tags -->
        {type === 'case' ? (
          <div class="mb-3">
            <div class="flex flex-wrap gap-x-3 gap-y-1 mb-2">
              <MetadataItem type="date" content={item.data.incident_date} size="sm" />
              <MetadataItem type="location" content={{ city: item.data.city, county: item.data.county }} size="sm" />
              <MetadataItem type="age" content={item.data.age} size="sm" />
            </div>
            <div class="flex flex-wrap gap-2">
              <MetadataItem type="agency" content={item.data.agencies?.slice(0, 1)} size="sm" />
              <MetadataItem type="forceType" content={item.data.force_type?.slice(0, 1)} size="sm" />
              <MetadataItem type="bodycam" content={item.data.bodycam_available} size="sm" variant="badge" />
            </div>
          </div>
        ) : (
          <>
            <!-- Date without box -->
            <div class="flex items-center gap-1.5 text-xs text-gray-500 dark:text-gray-400 mb-3">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>{formatDate(item.data.published_date!)}</span>
            </div>

            <!-- Tags with boxes -->
            <div class="flex flex-wrap gap-2 text-xs mb-4">
              {item.data.tags?.slice(0, 2).map((tag: string) => (
                <span class="inline-flex items-center gap-1.5 px-2 py-1 bg-gray-100 dark:bg-gray-700/50 text-gray-700 dark:text-gray-300 rounded border border-gray-300 dark:border-gray-600">
                  <svg class="w-3 h-3 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  {tag}
                </span>
              ))}
            </div>
          </>
        )}
        
        <!-- Read more link (subtle affordance) -->
        <a 
          href={`${urlPrefix}/${item.slug}`}
          class="inline-block text-red-600 dark:text-red-500 hover:underline text-sm mt-3"
        >
          Read more â†’
        </a>
        
      </div>
    </article>
  ))}
</div>
