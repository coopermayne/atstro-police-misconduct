---
import DocumentCard from './DocumentCard.astro';

interface Document {
  title: string;
  description: string;
  url: string;
}

interface Props {
  documents: Document[];
}

const { documents } = Astro.props;

if (!documents || documents.length === 0) {
  return null;
}
---

<section class="my-10 not-prose">
  <h2 class="!text-2xl !font-bold !text-gray-800 dark:!text-white !mb-4 !m-0 !p-0 !border-0">Related Documents</h2>
  
  <div class="space-y-4">
    {documents.map((doc) => (
      <DocumentCard 
        title={doc.title}
        description={doc.description}
        url={doc.url}
      />
    ))}
  </div>
</section>
