---
interface Document {
  title: string;
  description: string;
  url: string;
}

interface Props {
  documents: Document[];
}

const { documents } = Astro.props;

if (!documents || documents.length === 0) {
  return null;
}

// Helper to extract filename from URL
function getFileName(url: string): string {
  try {
    const urlObj = new URL(url);
    const pathname = urlObj.pathname;
    const parts = pathname.split('/');
    return decodeURIComponent(parts[parts.length - 1]);
  } catch {
    return 'Download';
  }
}

// Helper to get file extension
function getFileExtension(url: string): string {
  const fileName = getFileName(url);
  const ext = fileName.split('.').pop()?.toUpperCase();
  return ext || 'FILE';
}
---

<section class="my-10 not-prose">
  <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Related Documents</h2>
  
  <div class="space-y-4">
    {documents.map((doc) => (
      <div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-5 hover:shadow-md transition-shadow">
        <div class="flex items-start justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <!-- File Icon -->
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-red-100 dark:bg-red-900 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                  </svg>
                </div>
              </div>
              
              <!-- Title and Extension Badge -->
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="text-lg font-semibold text-gray-800 dark:text-white">
                    {doc.title}
                  </h3>
                  <span class="px-2 py-0.5 text-xs font-medium bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded">
                    {getFileExtension(doc.url)}
                  </span>
                </div>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  {doc.description}
                </p>
              </div>
            </div>
          </div>
          
          <!-- Download Button -->
          <a
            href={doc.url}
            target="_blank"
            rel="noopener noreferrer"
            download
            class="flex-shrink-0 inline-flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Download
          </a>
        </div>
      </div>
    ))}
  </div>
</section>
