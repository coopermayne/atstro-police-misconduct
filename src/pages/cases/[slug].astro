---
import MainLayout from '../../layouts/MainLayout.astro';
import DocumentsList from '../../components/DocumentsList.astro';
import RelatedCases from '../../components/RelatedCases.astro';
import { getCollection } from 'astro:content';

// Helper function to create slug from text
function createSlug(name: string): string {
  return name.toLowerCase().trim().replace(/\s+/g, '-');
}

export async function getStaticPaths() {
  const cases = await getCollection('cases');
  return cases.map(caseItem => ({
    params: { slug: caseItem.slug },
    props: { caseItem },
  }));
}

const { caseItem } = Astro.props;
const { Content } = await caseItem.render();
---

<MainLayout content={{ title: caseItem.data.title }}>
  <article class="py-8" data-pagefind-body>
    <!-- Breadcrumb / Back Navigation -->
    <nav class="mb-6 px-6">
      <a 
        href="/cases"
        class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors"
      >
        ‚Üê Back to all cases
      </a>
    </nav>

    <!-- Case Header and Content -->
    <div class="bg-white dark:bg-gray-900 rounded-none md:rounded-xl shadow-lg border-x-0 md:border-x border-y md:border border-gray-200 dark:border-gray-800 overflow-hidden mb-8">
      <div class="p-8 lg:p-12">
        <!-- Title and Body Cam Badge -->
        <div class="flex items-start justify-between gap-4 mb-6 pb-6 border-b-4 border-red-600">
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white leading-tight" data-pagefind-weight="10">
            {caseItem.data.title}
          </h1>
          {caseItem.data.bodycam_available && (
            <span class="flex-shrink-0 px-4 py-2 bg-green-600 dark:bg-green-500 text-white rounded-lg text-sm font-medium shadow-sm">
              üìπ Body Cam
            </span>
          )}
        </div>

        <!-- Description -->
        <p class="text-xl text-gray-700 dark:text-gray-300 leading-relaxed mb-8">
          {caseItem.data.description}
        </p>

        <!-- Metadata Section -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 mb-8 border border-gray-200 dark:border-gray-700">
          <!-- Basic Info -->
          <div class="flex flex-wrap gap-x-6 gap-y-2 text-sm text-gray-600 dark:text-gray-400 mb-6">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="font-medium">{new Date(caseItem.data.incident_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="font-medium">{caseItem.data.city}, CA</span>
            </div>
            {caseItem.data.age && (
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="font-medium">Age {caseItem.data.age}</span>
              </div>
            )}
          </div>

          <!-- Agencies -->
          <div class="mb-4">
            <div class="text-xs uppercase tracking-wide font-semibold text-gray-500 dark:text-gray-400 mb-2">Law Enforcement Agency</div>
            <div class="flex flex-wrap gap-2">
              {caseItem.data.agencies.map(agency => (
                <a 
                  href={`/agencies/${createSlug(agency)}`}
                  class="px-4 py-2 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors border border-gray-300 dark:border-gray-600 font-medium text-sm"
                >
                  {agency}
                </a>
              ))}
            </div>
          </div>

          <!-- Investigation Status -->
          {caseItem.data.investigation_status && (
            <div>
              <div class="text-xs uppercase tracking-wide font-semibold text-gray-500 dark:text-gray-400 mb-2">Investigation Status</div>
              <a 
                href={`/status/${createSlug(caseItem.data.investigation_status)}`}
                class="inline-block px-4 py-2 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors border border-gray-300 dark:border-gray-600 font-medium text-sm"
              >
                {caseItem.data.investigation_status}
              </a>
            </div>
          )}
        </div>

        <!-- Case Content -->
        <div class="prose prose-lg prose-gray dark:prose-invert max-w-none">
          <Content />
        </div>

        <!-- Documents Section -->
        {caseItem.data.documents && caseItem.data.documents.length > 0 && (
          <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
            <DocumentsList documents={caseItem.data.documents} />
          </div>
        )}
        
        <!-- Related Cases Section -->
        <RelatedCases 
          currentSlug={caseItem.slug}
          relatedCaseSlugs={caseItem.data.related_cases || []}
          agency={caseItem.data.agencies?.[0]}
          forceType={caseItem.data.force_type || []}
          county={caseItem.data.county}
        />
      </div>
    </div>
  </article>
</MainLayout>