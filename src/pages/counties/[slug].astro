---
import MainLayout from '../../layouts/MainLayout.astro';
import CaseCard from '../../components/CaseCard.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  // Helper function to create slug from county name
  function createSlug(name: string): string {
    return name.toLowerCase().trim().replace(/\s+/g, '-');
  }
  
  const cases = await getCollection('cases', ({ data }) => data.published);
  
  // Extract all unique counties
  const countiesSet = new Set<string>();
  cases.forEach(caseItem => {
    if (caseItem.data.county) {
      countiesSet.add(caseItem.data.county.trim());
    }
  });
  
  // Create paths for each county
  return Array.from(countiesSet).map(county => ({
    params: { slug: createSlug(county) },
    props: { countyName: county },
  }));
}

const { slug } = Astro.params;
const { countyName } = Astro.props;

// Helper function to create slug from county name
function createSlug(name: string): string {
  return name.toLowerCase().trim().replace(/\s+/g, '-');
}

// Get all cases in this county
const allCases = await getCollection('cases', ({ data }) => data.published);
const countyCases = allCases.filter(caseItem => 
  createSlug(caseItem.data.county || '') === slug
).sort((a, b) => 
  new Date(b.data.incident_date).getTime() - new Date(a.data.incident_date).getTime()
);

// Try to get custom content for this county
let customContent = null;
let CustomContent = null;
try {
  customContent = await getEntry('counties', slug);
  if (customContent) {
    const rendered = await customContent.render();
    CustomContent = rendered.Content;
  }
} catch (e) {
  // No custom content exists, that's okay
}

const totalCases = countyCases.length;
---

<MainLayout content={{ title: `${countyName} County` }}>
  <!-- Hero Section -->
  <header class="bg-white dark:bg-gray-900 mb-8">
    <div class="container px-6 py-10 mx-auto border-b-4 border-red-600">
      <h1 class="text-3xl font-semibold text-gray-800 dark:text-white lg:text-4xl">
        <span class="text-red-600">{countyName} County</span> Cases
      </h1>
      <p class="mt-3 text-gray-600 dark:text-gray-400">
        {totalCases} {totalCases === 1 ? 'case' : 'cases'} in {countyName} County
      </p>
    </div>
  </header>

  <div class="px-6 pb-10">
    <!-- Custom Content (if exists) -->
    {CustomContent && (
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-8 mb-8 prose prose-lg prose-gray dark:prose-invert max-w-none">
        <CustomContent />
      </div>
    )}

    <!-- Cases Section -->
    {totalCases > 0 ? (
      <div>
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-6">
          All Cases
        </h2>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {countyCases.map(caseItem => (
            <CaseCard case={caseItem} showImage={true} showDescription={true} />
          ))}
        </div>
      </div>
    ) : (
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 p-8 text-center">
        <p class="text-gray-600 dark:text-gray-400">No cases found for this county.</p>
      </div>
    )}

    <!-- Back Link -->
    <div class="mt-8">
      <a 
        href="/cases"
        class="inline-flex items-center text-red-600 dark:text-red-500 hover:text-red-700 dark:hover:text-red-400 font-medium"
      >
        ‚Üê Back to all cases
      </a>
    </div>
  </div>
</MainLayout>
