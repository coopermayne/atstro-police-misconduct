---
import MainLayout from '../layouts/MainLayout.astro';
import ArticleGrid from '../components/ArticleGrid.astro';
import MetadataItem from '../components/MetadataItem.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import { getCollection } from 'astro:content';

// Get recent cases
const cases = await getCollection('cases', ({ data }) => data.published);
const sortedCases = cases.sort((a, b) => 
  new Date(b.data.incident_date).getTime() - new Date(a.data.incident_date).getTime()
).slice(0, 3);

// Get recent posts
const posts = await getCollection('posts', ({ data }) => data.published);
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.published_date).getTime() - new Date(a.data.published_date).getTime()
).slice(0, 3);

// Get all unique counties and agencies
const allCases = await getCollection('cases', ({ data }) => data.published);
const counties = [...new Set(allCases.map(c => c.data.county))].sort();
const agencies = [...new Set(allCases.flatMap(c => c.data.agencies))].sort();

// Helper function to create slug
function createSlug(name: string): string {
  return name.toLowerCase().trim().replace(/\s+/g, '-');
}
---

<MainLayout content={{ title: 'Home' }}>
  <!-- Hero Section -->
  <header class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800">
    <div class="container px-6 py-12 mx-auto lg:py-16">
      <div class="max-w-4xl mx-auto text-center">

        <!-- Main Message -->
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white lg:text-5xl leading-tight">
          Documenting Police Misconduct<br />in California
        </h1>
        
        <p class="mt-6 text-xl text-gray-600 dark:text-gray-400 leading-relaxed max-w-3xl mx-auto">
          Comprehensive case documentation, legal resources, and rights information for California communities affected by police violence.
        </p>

        <!-- Primary Action Cards -->
        <div class="grid md:grid-cols-3 gap-4 mt-12 max-w-4xl mx-auto">
          <!-- Need Help Now -->
          <a href="/contact#legal-help" class="group relative bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-md p-6 transition-all hover:shadow-md hover:-translate-y-0.5">
            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-red-600 dark:bg-red-700 rounded-md mb-4 group-hover:scale-105 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Need Help?</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Resources and guidance for victims and witnesses in California</p>
            <div class="flex items-center justify-center gap-1 mt-4 text-sm font-medium text-red-600 dark:text-red-400">
              <span>Get Support</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>

          <!-- Browse Cases -->
          <a href="/cases" class="group relative bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 border border-gray-300 dark:border-gray-700 rounded-md p-6 transition-all hover:shadow-md hover:-translate-y-0.5">
            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-gray-700 dark:bg-gray-600 rounded-md mb-4 group-hover:scale-105 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Browse Cases</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Documented cases from across California</p>
            <div class="flex items-center justify-center gap-1 mt-4 text-sm font-medium text-gray-700 dark:text-gray-300">
              <span>View {cases.length} Cases</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>

          <!-- Learn Your Rights -->
          <a href="/posts" class="group relative bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 border border-gray-300 dark:border-gray-700 rounded-md p-6 transition-all hover:shadow-md hover:-translate-y-0.5">
            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-gray-700 dark:bg-gray-600 rounded-md mb-4 group-hover:scale-105 transition-transform">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Read Our Blog</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Legal updates, rights information, and analysis</p>
            <div class="flex items-center justify-center gap-1 mt-4 text-sm font-medium text-gray-700 dark:text-gray-300">
              <span>View Articles</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Featured Recent Case -->
  {sortedCases.length > 0 && (
    <section class="bg-gray-50 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="container px-6 py-12 mx-auto">
        <div class="max-w-4xl mx-auto">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-3">
              <div class="h-1 w-8 bg-red-600"></div>
              <h2 class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wider">Recently Added</h2>
            </div>
            <a href="/cases" class="text-sm font-medium text-red-600 dark:text-red-500 hover:underline">View all cases â†’</a>
          </div>

          <article class="bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden hover:border-red-300 dark:hover:border-red-800 transition-colors">
            <div class="md:flex">
              {sortedCases[0].data.featured_image ? (
                <div class="md:w-1/3">
                  <a href={`/cases/${sortedCases[0].slug}`} class="block h-full group">
                    <img 
                      src={`https://imagedelivery.net/3oZsG34qPq3SIXQhl47vqA/${sortedCases[0].data.featured_image.imageId}/medium`}
                      alt={sortedCases[0].data.title}
                      class="w-full h-full object-cover transition-transform duration-200 group-hover:scale-[1.02]"
                    />
                  </a>
                </div>
              ) : null}
              
              <div class={`p-8 ${sortedCases[0].data.featured_image ? 'md:w-2/3' : 'w-full'}`}>
                <div class="mb-3">
                  <div class="flex flex-wrap gap-x-4 gap-y-2 mb-2">
                    <MetadataItem type="date" content={sortedCases[0].data.incident_date} size="md" />
                    <MetadataItem type="location" content={{ city: sortedCases[0].data.city, county: sortedCases[0].data.county }} size="md" />
                    <MetadataItem type="age" content={sortedCases[0].data.age} size="md" />
                  </div>
                  <div class="flex flex-wrap gap-2">
                    <MetadataItem type="agency" content={sortedCases[0].data.agencies?.slice(0, 2)} size="md" />
                    <MetadataItem type="forceType" content={sortedCases[0].data.force_type} size="md" />

                    <MetadataItem type="bodycam" content={sortedCases[0].data.bodycam_available} size="md" variant="badge" />
                  </div>
                </div>

                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
                  <a href={`/cases/${sortedCases[0].slug}`} class="hover:text-red-600 dark:hover:text-red-500">
                    {sortedCases[0].data.title}
                  </a>
                </h3>

                {sortedCases[0].data.description && (
                  <p class="text-gray-600 dark:text-gray-400 mb-4">
                    {sortedCases[0].data.description}
                  </p>
                )}

                <a 
                  href={`/cases/${sortedCases[0].slug}`}
                  class="inline-flex items-center gap-2 text-sm font-medium text-red-600 dark:text-red-500 hover:underline"
                >
                  Read full case details
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </div>
      </div>
    </section>
  )}

  <!-- Recent Blog Posts Section -->
  <section class="bg-white dark:bg-gray-900 px-6 py-12">
    <div class="container mx-auto max-w-6xl">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">From Our Blog</h2>
          <p class="text-gray-600 dark:text-gray-400">Legal updates, rights information, and analysis</p>
        </div>
        <a href="/posts" class="text-red-600 dark:text-red-500 hover:underline font-medium flex items-center gap-1">
          View all posts
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
      
      <ArticleGrid items={sortedPosts} type="post" />
    </div>
  </section>

  <!-- Newsletter CTA Section (After engagement) -->
  <NewsletterCTA />

  <!-- Browse by Location/Agency Section -->
  <section class="bg-white dark:bg-gray-900 px-6 py-8">
    <div class="container mx-auto">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 text-center">
        Browse by Location or Agency
      </h2>
      <p class="text-center text-gray-600 dark:text-gray-400 mb-6">
        Find cases specific to your county or law enforcement agency
      </p>
      
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Counties -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">By County</h3>
          <div class="space-y-2 max-h-64 overflow-y-auto">
            {counties.map(county => (
              <a 
                href={`/counties/${createSlug(county)}`}
                class="block px-4 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded hover:bg-red-50 dark:hover:bg-gray-600 hover:text-red-600 dark:hover:text-red-500 transition-colors border border-gray-200 dark:border-gray-600"
              >
                {county} County
              </a>
            ))}
          </div>
        </div>

        <!-- Agencies -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">By Agency</h3>
          <div class="space-y-2 max-h-64 overflow-y-auto">
            {agencies.map(agency => (
              <a 
                href={`/agencies/${createSlug(agency)}`}
                class="block px-4 py-2 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded hover:bg-red-50 dark:hover:bg-gray-600 hover:text-red-600 dark:hover:text-red-500 transition-colors border border-gray-200 dark:border-gray-600"
              >
                {agency}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

</MainLayout>
