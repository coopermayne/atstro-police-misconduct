---
import MainLayout from '../../layouts/MainLayout.astro';
import DocumentsList from '../../components/DocumentsList.astro';
import ExternalLinkCard from '../../components/ExternalLinkCard.astro';
import { getCollection } from 'astro:content';

// Helper function to create slug from text
function createSlug(name: string): string {
  return name.toLowerCase().trim().replace(/\s+/g, '-');
}

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (scored by number of shared tags)
const allPosts = await getCollection('posts', ({ data }) => data.published);
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .map(p => {
    const sharedTags = p.data.tags.filter(tag => post.data.tags.includes(tag));
    return { post: p, score: sharedTags.length };
  })
  .filter(({ score }) => score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, 3)
  .map(({ post }) => post);

// SEO data
const siteUrl = 'https://www.californiapolicemisconduct.com';
const canonicalUrl = `${siteUrl}/posts/${post.slug}`;
const ogImage = post.data.featured_image?.url || `${siteUrl}/images/og-default.jpg`;

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "description": post.data.description,
  "image": ogImage,
  "datePublished": post.data.published_date,
  "dateModified": post.data.updated_date || post.data.published_date,
  "author": {
    "@type": "Organization",
    "name": "California Police Misconduct"
  },
  "publisher": {
    "@type": "Organization",
    "name": "California Police Misconduct",
    "url": siteUrl
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  },
  "keywords": post.data.tags.join(", ")
};
---

<MainLayout content={{
  title: post.data.title,
  description: post.data.description,
  image: ogImage,
  type: 'article',
  publishedDate: post.data.published_date
}}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <article class="py-8" data-pagefind-body>
    <!-- Back Navigation -->
    <nav class="mb-6 px-6">
      <a 
        href="/posts"
        class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors"
      >
        ‚Üê Back to all posts
      </a>
    </nav>

    <!-- Post Header and Content -->
    <div class="bg-white dark:bg-gray-800 rounded-none md:rounded-lg shadow-md border-x-0 md:border-x border-y md:border border-gray-200 dark:border-gray-700 p-8 mb-8">
      <div class="mb-4 flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span>Published: {new Date(post.data.published_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
      </div>
      
      <h1 class="text-3xl lg:text-4xl font-semibold text-gray-800 dark:text-white mb-4 border-b-4 border-red-600 pb-4" data-pagefind-weight="10">
        {post.data.title}
      </h1>

      <p class="text-lg text-gray-500 dark:text-gray-400 italic mb-6">
        {post.data.description}
      </p>

      <!-- Tags -->
      <div class="flex flex-wrap gap-2 mb-8">
        {post.data.tags.map(tag => (
          <a 
            href={`/posts/tags/${createSlug(tag)}`}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gray-100 dark:bg-gray-700/50 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors text-sm border border-gray-300 dark:border-gray-600"
          >
            <svg class="w-3.5 h-3.5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            {tag}
          </a>
        ))}
      </div>

      <!-- Post Content -->
      <div class="prose prose-lg prose-gray dark:prose-invert max-w-none">
        <Content />
      </div>

      <!-- Documents Section -->
      {post.data.documents && post.data.documents.length > 0 && (
        <div class="mt-8">
          <DocumentsList documents={post.data.documents} />
        </div>
      )}
      
      <!-- External Links Section -->
      {post.data.external_links && post.data.external_links.length > 0 && (
        <div class="mt-8">
          <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">External Resources</h2>
          {post.data.external_links.map(link => (
            <ExternalLinkCard
              url={link.url}
              title={link.title}
              description={link.description}
              icon={link.icon || 'generic'}
            />
          ))}
        </div>
      )}
    </div>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="mt-12 px-6">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Related Articles</h2>
        <div class="space-y-6">
          {relatedPosts.map(relatedPost => (
            <article class="md:flex gap-6">
              {relatedPost.data.featured_image ? (
                <div class="md:w-1/3 mb-4 md:mb-0">
                  <a href={`/posts/${relatedPost.slug}`} class="block group">
                    <img
                      src={`https://imagedelivery.net/3oZsG34qPq3SIXQhl47vqA/${relatedPost.data.featured_image.imageId}/medium`}
                      alt={relatedPost.data.featured_image.alt || relatedPost.data.title}
                      class="w-full h-48 md:h-full object-cover rounded-lg transition-transform duration-200 group-hover:scale-[1.02]"
                    />
                  </a>
                </div>
              ) : (
                <div class="md:w-1/3 mb-4 md:mb-0">
                  <div class="w-full h-48 md:h-full bg-gray-100 dark:bg-gray-700 rounded-lg flex flex-col items-center justify-center p-4 text-center border border-gray-200 dark:border-gray-600">
                    <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-2 line-clamp-2">{relatedPost.data.title}</h3>
                  </div>
                </div>
              )}

              <div class="md:w-2/3">
                <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{new Date(relatedPost.data.published_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                </div>

                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                  <a href={`/posts/${relatedPost.slug}`} class="hover:text-red-600 dark:hover:text-red-500">
                    {relatedPost.data.title}
                  </a>
                </h3>

                <p class="text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">
                  {relatedPost.data.description}
                </p>

                <!-- Tags -->
                <div class="flex flex-wrap gap-2 mb-3">
                  {relatedPost.data.tags.slice(0, 3).map(tag => (
                    <a
                      href={`/posts/tags/${createSlug(tag)}`}
                      class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 dark:bg-gray-700/50 text-gray-600 dark:text-gray-400 text-xs rounded hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors border border-gray-200 dark:border-gray-600"
                    >
                      {tag}
                    </a>
                  ))}
                </div>

                <a
                  href={`/posts/${relatedPost.slug}`}
                  class="inline-flex items-center gap-2 text-sm font-medium text-red-600 dark:text-red-500 hover:underline"
                >
                  Read full article
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}
  </article>
</MainLayout>
