---
import MainLayout from '../../layouts/MainLayout.astro';
import ArticleGrid from '../../components/ArticleGrid.astro';
import { getCollection } from 'astro:content';

// Get all published posts
const posts = await getCollection('posts', ({ data }) => data.published);

// Sort by published date (most recent first)
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.published_date).getTime() - new Date(a.data.published_date).getTime()
);

// Get the most recent post for featured section
const featuredPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1, 4);

// Get some stats
const allTags = [...new Set(sortedPosts.flatMap(p => p.data.tags))];

// Helper to get featured image URL
function getFeaturedImageUrl(featuredImage: {imageId: string, alt: string, caption?: string} | undefined): string | undefined {
  if (!featuredImage?.imageId) return undefined;
  const accountHash = "3oZsG34qPq3SIXQhl47vqA";
  return `https://imagedelivery.net/${accountHash}/${featuredImage.imageId}/medium`;
}
---

<MainLayout content={{ title: 'Blog' }}>
  <!-- Hero Section -->
  <header class="bg-white dark:bg-gray-900 mb-6">
    <div class="container px-6 py-8 mx-auto border-b-4 border-red-600">
      <h1 class="text-3xl font-semibold text-gray-800 dark:text-white lg:text-4xl">
        Police Misconduct <span class="text-red-600">Law Blog</span>
      </h1>
      <p class="mt-3 text-gray-600 dark:text-gray-400">
        In-depth analysis of legal issues, case law, and developments in police accountability and civil rights litigation.
      </p>
    </div>
  </header>

  <!-- Recent Blog Posts Section -->
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-8 mx-auto">
      <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-6">
        Recent Blog Posts
      </h2>
      
      <div class="lg:flex lg:-mx-6">
        <!-- Most Recent Post (Featured) -->
        {featuredPost && (
          <div class="lg:w-3/4 lg:px-6">
            <a href={`/posts/${featuredPost.slug}`}>
              {featuredPost.data.featured_image ? (
                <img 
                  class="object-cover object-center w-full h-80 xl:h-[28rem] rounded-xl" 
                  src={getFeaturedImageUrl(featuredPost.data.featured_image)} 
                  alt={featuredPost.data.title}
                />
              ) : (
                <div class="bg-gray-200 dark:bg-gray-700 w-full h-80 xl:h-[28rem] rounded-xl flex items-center justify-center">
                  <span class="text-gray-400 dark:text-gray-500 text-lg">No image</span>
                </div>
              )}
            </a>
            
            <div>
              <p class="mt-4 text-sm text-red-600 uppercase">Latest Post</p>
              <h1 class="max-w-lg mt-2 text-2xl font-semibold leading-tight text-gray-800 dark:text-white">
                <a href={`/posts/${featuredPost.slug}`} class="hover:text-red-600 dark:hover:text-red-500">
                  {featuredPost.data.title}
                </a>
              </h1>
              <p class="mt-2 text-gray-600 dark:text-gray-400">
                {featuredPost.data.description}
              </p>
              <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mt-3">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{new Date(featuredPost.data.published_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
              </div>
              
              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mt-3">
                {featuredPost.data.tags.slice(0, 3).map(tag => (
                  <a 
                    href={`/posts/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                    class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gray-100 dark:bg-gray-700/50 text-gray-700 dark:text-gray-300 text-xs rounded hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors border border-gray-300 dark:border-gray-600"
                  >
                    <svg class="w-3 h-3 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                    {tag}
                  </a>
                ))}
              </div>
              
              <a 
                href={`/posts/${featuredPost.slug}`} 
                class="inline-block mt-3 text-red-600 hover:underline"
              >
                Read More â†’
              </a>
            </div>
          </div>
        )}

        <!-- Other Recent Posts (Sidebar) -->
        <div class="mt-8 lg:w-1/4 lg:mt-0 lg:px-6">
          {recentPosts.map((post, index) => (
            <div>
              <h3 class="text-red-600 capitalize text-sm">Recent Post</h3>
              <a 
                href={`/posts/${post.slug}`} 
                class="block mt-2 font-medium text-gray-800 hover:underline hover:text-red-600 dark:text-white dark:hover:text-red-500"
              >
                {post.data.title}
              </a>
              <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                {post.data.description.substring(0, 100)}...
              </p>
              <div class="flex items-center gap-1.5 text-xs text-gray-600 dark:text-gray-400 mt-2">
                <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{new Date(post.data.published_date).toLocaleDateString('en-US', { month: 'numeric', day: 'numeric', year: 'numeric' })}</span>
              </div>
              {index < recentPosts.length - 1 && (
                <hr class="my-4 border-gray-200 dark:border-gray-700" />
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- All Posts Grid -->
  {sortedPosts.length > 1 && (
    <section class="px-6 pb-8 mt-8">
      <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">All Articles</h2>
      <ArticleGrid items={sortedPosts} type="post" />
    </section>
  )}

  <!-- Browse by Topic -->
  <section class="px-6 pb-8 mt-8">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Browse by Topic</h2>
    <div class="flex flex-wrap gap-3">
      {allTags.sort().map(tag => (
        <a 
          href={`/posts/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
          class="inline-flex items-center gap-1.5 px-4 py-2 bg-gray-100 dark:bg-gray-700/50 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors border border-gray-300 dark:border-gray-600"
        >
          <svg class="w-3.5 h-3.5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
          {tag}
        </a>
      ))}
    </div>
  </section>
</MainLayout>
